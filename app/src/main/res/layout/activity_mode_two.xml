<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_gray"
    android:padding="10dp"
    tools:context=".Mode_one">

    <RelativeLayout
        android:id="@+id/jung"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_gray">

        <ImageButton
            android:id="@+id/jung_pre_button"
            android:layout_toLeftOf="@id/jung_textview"
            android:layout_marginRight="50dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:src="@drawable/left_button"
            android:scaleType="fitCenter"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/jung_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중성"
            android:textColor="@color/black"
            android:textSize="80sp"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/jung_next_button"
            android:layout_toRightOf="@id/jung_textview"
            android:layout_marginLeft="50dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:src="@drawable/right_button"
            android:scaleType="fitCenter"
            android:background="@color/transparent"/>

    </RelativeLayout>

</RelativeLayout>